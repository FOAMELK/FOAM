<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BeerActivity">

    <LinearLayout
        android:id="@+id/this_beer_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/this_beer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="start"
                android:maxLines="2"
                android:layout_weight="1"
                android:autoSizeMaxTextSize="44sp"
                android:autoSizeMinTextSize="20sp"
                android:autoSizeTextType="uniform"
                android:textSize="32sp"
                android:fontFamily="sans-serif"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="-2"
                android:shadowDy="-2"
                android:text="Carlsberg Pilsner"
                android:textColor="#E3DED5"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/this_beer_image"
                android:layout_width="144dp"
                android:layout_height="144dp"
                android:layout_marginEnd="24dp"
                android:background="#99000000"
                android:padding="12dp"
                android:src="@drawable/carlsberg_pilsner" />

        </LinearLayout>

        <TextView
            android:id="@+id/this_beer_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoSizeMaxTextSize="32sp"
            android:autoSizeMinTextSize="16sp"
            android:autoSizeTextType="uniform"
            android:layout_margin="16dp"
            android:fontFamily="sans-serif"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="-2"
            android:shadowDy="-2"
            android:text="Dette er en beskrivelse af en rigtig god øl med en lækker smag og noget fantastisk mood boosting. Det er præcis hvad os danskere elsker."
            android:textColor="#E3DED5"
            android:textSize="20sp" />

        <RatingBar
            android:id="@+id/this_beer_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="3"
            android:stepSize="1"
            android:theme="@style/RatingBar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal"
            android:text="Smag"
            android:autoSizeMaxTextSize="32sp"
            android:autoSizeMinTextSize="24sp"
            android:autoSizeTextType="uniform"
            android:fontFamily="sans-serif"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="-2"
            android:shadowDy="-2"
            android:textColor="#E3DED5"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ProgressBar
                android:id="@+id/this_beer_taste1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:progress="30"
                android:layout_marginBottom="8dp"
                android:minWidth="220dp"
                android:progressTint="#FFC107"/>

            <TextView
                android:id="@+id/this_beer_taste1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Humle"
                android:textColor="#E3DED5"
                android:textSize="16sp"
                android:textStyle="bold"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="-2"
                android:shadowDy="-2"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ProgressBar
                android:id="@+id/this_beer_taste2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:progress="10"
                android:layout_marginBottom="8dp"
                android:minWidth="220dp"
                android:progressTint="#FFC107"/>

            <TextView
                android:id="@+id/this_beer_taste2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Blomster"
                android:textColor="#E3DED5"
                android:textSize="16sp"
                android:textStyle="bold"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="-2"
                android:shadowDy="-2"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ProgressBar
                android:id="@+id/this_beer_taste3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:progress="60"
                android:layout_marginBottom="8dp"
                android:minWidth="220dp"
                android:progressTint="#FFC107"/>

            <TextView
                android:id="@+id/this_beer_taste3_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Krydderier"
                android:textColor="#E3DED5"
                android:textSize="16sp"
                android:textStyle="bold"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="-2"
                android:shadowDy="-2"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ProgressBar
                android:id="@+id/this_beer_taste4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:progress="35"
                android:layout_marginBottom="8dp"
                android:minWidth="220dp"
                android:progressTint="#FFC107"/>

            <TextView
                android:id="@+id/this_beer_taste4_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Malt"
                android:textColor="#E3DED5"
                android:textSize="16sp"
                android:textStyle="bold"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="-2"
                android:shadowDy="-2"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>